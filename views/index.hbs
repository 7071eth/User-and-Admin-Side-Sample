<div class="container mt-2">
    <div class="row">
        <div>
            <form class="d-flex">
                    {{#if user}}
                    <p>.</p>
                    {{else}}
                    <a href="/login" class="btn btn-success ms-auto mb-4" style="width: fit-content; ">Login</a>
                    {{/if}}
                </form>
                </div>
        {{#each products}}
        <div class="col-md-3">
            <div class="card">
                <img src={{this.image}} class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Add to Cart</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>